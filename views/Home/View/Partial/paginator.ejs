<div class="d_center">
    <ul class="pagination">
    <%
    if(req.query.page-2>0)
    {
    %>
        <li><a class="aArowStyle" href="<%- path; %>?&page=1" title="<%- $.trans.gettext('First page'); %>">&laquo;</a></li>
    <%
    }
            if(req.query.page-1>0)
    {
    %>
        <li><a class="aArowStyle" href="<%- path; %>?&page=<%- req.query.page-1; %>" title="<%- $.trans.gettext('Page')+' '+(parseInt(req.query.page)-1); %>">&lsaquo;</a></li>
    <%
    }
            for(var page = parseInt(req.query.page)-4; page <= parseInt(req.query.page)+4; page++)
    {
            if(page>0 && page<=totalPages)
    {
    %>
        <li <%- (page == req.query.page)? 'class="active"': ''; %>><a href="<%- path; %>?&page=<%- page; %>" title="<%- $.trans.gettext('Page'); %> <%- page; %>"><%- page; %></a></li>
    <%
    }
    }
            if(parseInt(req.query.page)+1<=totalPages)
    {
    %>
        <li><a class="aArowStyle" href="<%- path; %>?&page=<%- parseInt(req.query.page)+1; %>" title="<%- $.trans.gettext('Page')+' '+(parseInt(req.query.page)+1); %>">&rsaquo;</a></li>
    <%
    }
            if(parseInt(req.query.page)+2<=totalPages)
    {
    %>
        <li><a class="aArowStyle" href="<%- path; %>?&page=<%- totalPages; %>" title="<%- $.trans.gettext('Last page'); %>">&raquo;</a></li>
    <%
    }
    %>
    </ul>
</div>